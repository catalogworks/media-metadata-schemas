{
    "$id": "http://catalog.works/schemas/CatalogMetadata.json",
    "type": "object",
    "title": "Catalog20210202",
    "description": "This schema describes version 20210202 of the Catalog Metadata Standard",
    "properties": {
        "body": {
            "type": "object",
            "description": "Descriptive metadata properties of a Catalog record",
            "examples": [
                {
                    "version": "catalog-20210202",
                    "title": "1/1",
                    "artist": "Brian Eno",
                    "description": "From 'Ambient 1: Music for Airports' (1978)",
                    "duration": 1040.1,
                    "mimeType": "audio/aif",
                    "isArtworkNft": false,
                    "artworkDetail": {
                        "uri": "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.normanrecords.com%2Fartwork%2Fmedium%2F90%2F120090-brian-eno-ambient-1-music-for-airports.jpg&f=1&nofb=1",
                        "hash": "TODO",
                        "mimeType": "image/jpg"
                    },
                    "artworkDetailNft": null
                }
            ],
            "required": [
                "version",
                "title",
                "artist",
                "description",
                "duration",
                "mimeType",
                "isArtworkNft",
                "artworkDetail",
                "artworkDetailNft"
            ],
            "properties": {
                "version": {
                    "type": "string",
                    "description": "This property defines the calendar version of the schema so that consumers can correctly parse the json",
                    "enum": ["catalog-20210202"],
                    "examples": ["catalog-20210202"]
                },
                "title": {
                    "type": "string",
                    "description": "Title of the track",
                    "examples": ["1/1"]
                },
                "artist": {
                    "type": "string",
                    "description": "Name of the artist who created the track",
                    "examples": ["Brian Eno"]
                },
                "description": {
                    "type": ["string", "null"],
                    "description": "An optional property for describing the track",
                    "examples": ["From 'Ambient 1: Music for Airports' (1978)", null]
                },
                "duration": {
                    "type": "number",
                    "description": "Length of the audio file in seconds",
                    "examples": [1040.1]
                },
                "mimeType": {
                    "type": "string",
                    "description": "MimeType of the audio file. Only lossless formats (aif, wav, flac) are supported.",
                    "enum": ["audio/aif", "audio/flac", "audio/wav"],
                    "examples": ["audio/aif"]
                },
                "isArtworkNft": {
                    "type": "boolean",
                    "description": "Denotes whether the artwork is a separate NFT or is embedded into the Catalog record",
                    "examples": [true, false]
                },
                "artworkDetail": {
                    "type": ["object", "null"],
                    "description": "Information about the cover art if it isn't an NFT",
                    "required": [
                        "uri",
                        "hash",
                        "mimeType"
                    ],
                    "examples": [
                         {
                            "uri": "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.normanrecords.com%2Fartwork%2Fmedium%2F90%2F120090-brian-eno-ambient-1-music-for-airports.jpg&f=1&nofb=1",
                            "hash": "hash",
                            "mimeType": "image/jpg"
                        }
                    ],
                    "properties": {
                        "uri": {
                            "type": "string",
                            "description": "Pointer to the cover art for the record (must begin with http/https)",
                            "examples": ["https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.normanrecords.com%2Fartwork%2Fmedium%2F90%2F120090-brian-eno-ambient-1-music-for-airports.jpg&f=1&nofb=1"]
                        },
                        "hash": {
                            "type": "string",
                            "description": "SHA-256 hash of the cover art at the time of mint",
                            "examples": ["TODO"]
                        },
                        "mimeType": {
                            "type": "string",
                            "description": "MimeType of the cover art",
                            "examples": ["image/jpg", "image/png"]
                        }
                    }
                },
                "artworkDetailNft": {
                    "type": ["object", "null"],
                    "description": "Information about the cover art if it is an NFT",
                    "required": [
                        "chainId",
                        "contractAddress",
                        "tokenId"
                    ],
                    "examples": [{
                        "chainId": 1,
                        "contractAddress": "0xabEFBc9fD2F806065b4f3C237d4b59D9A97Bcac7",
                        "tokenId": 69
                    }],
                    "properties": {
                        "chainId": {
                            "type": "integer",
                            "description": "Ethereum network that the cover art NFT exists on",
                            "enum": [1, 4],
                            "examples": [1, 4]
                        },
                        "contractAddress": {
                            "type": "string",
                            "description": "Address of the factory contract that was used to mint the cover art NFT",
                            "examples": ["0xabEFBc9fD2F806065b4f3C237d4b59D9A97Bcac7", "0x7C2668BD0D3c050703CEcC956C11Bd520c26f7d4"]
                        },
                        "tokenId": {
                            "type": "integer",
                            "description": "Token ID of the cover art NFT",
                            "examples": [69, 420]
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "seal": {
            "type": "object",
            "description": "Information used to verify the authenticity of the record",
            "examples": [
                {
                    "signature": "TODO",
                    "publicKey": "0xc236541380fc0C2C05c2F2c6c52a21ED57c37952"
                }
            ],
            "required": [
                "signature",
                "publicKey"
            ],
            "properties": {
                "signature": {
                    "type": "string",
                    "description": "The result of the Catalog public key signing the body of the record metadata",
                    "examples": ["TODO"]
                },
                "publicKey": {
                    "type": "string",
                    "description": "Catalog's public key used to sign the record metadata",
                    "enum": ["0xc236541380fc0C2C05c2F2c6c52a21ED57c37952"],
                    "examples": ["0xc236541380fc0C2C05c2F2c6c52a21ED57c37952"]
                }
            },
            "additionalProperties": false
        }
    },
    "examples": [
        {
            "body": {
                "version": "catalog-20210202",
                "title": "1/1",
                "artist": "Brian Eno",
                "description": "From 'Ambient 1: Music for Airports' (1978)",
                "duration": 1040.1,
                "mimeType": "audio/aif",
                "isArtworkNft": false,
                "artworkDetail": {
                    "uri": "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.normanrecords.com%2Fartwork%2Fmedium%2F90%2F120090-brian-eno-ambient-1-music-for-airports.jpg&f=1&nofb=1",
                    "hash": "TODO",
                    "mimeType": "image/jpg"
                },
                "artworkDetailNft": null
            },
            "seal": {
                "signature": "TODO",
                "publicKey": "0xc236541380fc0C2C05c2F2c6c52a21ED57c37952"
            }
        },
        {
            "body": {
                "version": "catalog-20210202",
                "title": "1/1",
                "artist": "Brian Eno",
                "description": "From 'Ambient 1: Music for Airports' (1978)",
                "duration": 1040.1,
                "mimeType": "audio/aif",
                "isArtworkNft": true,
                "artworkDetail": null,
                "artworkDetailNft": {
                    "chainId": 1,
                    "contractAddress": "0xabEFBc9fD2F806065b4f3C237d4b59D9A97Bcac7",
                    "tokenId": 69
                }
            },
            "seal": {
                "signature": "TODO",
                "publicKey": "0xc236541380fc0C2C05c2F2c6c52a21ED57c37952"
            }
        }
    ],
    "required": [
        "body",
        "seal"
    ],
    "additionalProperties": false
}